			// fjs.parentNode.insertBefore(js, fjs);
			// }(document, 'script', 'facebook-jssdk'));
		</script>
		<div id="header">
				<div style="float: left">
					<%= t("welcome_message", :default => 'Welcome! ')%>
					<% if current_user %>
					<%= current_user.email %>
					<% else %>
					<%= link_to t("signin"), user_sign_in_path %>
					<%= t("or") %>
					<%= link_to t("signup"), member_managements_sign_up_path %>
					<%= t("please") %>
					<% end %>
					</div>
			<%= banner(:home, :header, :top_left) %>
			<div id="logo">
				<%= link_to image_tag("common/logo.gif"), root_path(:locale => 'ko' ) %>
			</div>
			<%= banner(:home, :header, :top_right) %>
			<div id="devise">
				<div id="account">
					<% if user_signed_in? %>
					<%= link_to image_tag("#{I18n.locale}/login/btn_logout.gif"), destroy_user_session_path, :method => :delete %>
					<% else %>
					<%= link_to image_tag("#{I18n.locale}/login/btn_login.gif"), user_sign_in_path %>
					<% end %>
					<%= image_tag("#{I18n.locale}/login/bar.gif") %>
					<% if user_signed_in? %>
					<%= link_to image_tag("#{I18n.locale}/login/btn_modify.gif"), edit_user_registration_path %>
					<% else %>
					<!-- %= link_to image_tag("#{I18n.locale}/login/btn_member.gif"), new_user_registration_path % -->
					<%= link_to image_tag("#{I18n.locale}/login/btn_member.gif"), member_managements_sign_up_path %>
					<% end %>
				</div>
			</div>
			<div id="navigation">
				<ul class="wat-cf">
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi01.gif", :mouseover => "#{I18n.locale}/navi/btn_navi01_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi02.gif", :mouseover => "#{I18n.locale}/navi/btn_navi02_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi03.gif", :mouseover => "#{I18n.locale}/navi/btn_navi03_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi04.gif", :mouseover => "#{I18n.locale}/navi/btn_navi04_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi05.gif", :mouseover => "#{I18n.locale}/navi/btn_navi05_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi06.gif", :mouseover => "#{I18n.locale}/navi/btn_navi06_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi07.gif", :mouseover => "#{I18n.locale}/navi/btn_navi07_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi08.gif", :mouseover => "#{I18n.locale}/navi/btn_navi08_ov.gif")%>
					</li>
					<li>
						<%= image_tag("#{I18n.locale}/navi/btn_navi09.gif", :mouseover => "#{I18n.locale}/navi/btn_navi09_ov.gif")%>
					</li>
				</ul>
			</div>
			<div id="follows">
				<ul class="wat-cf">
					<li>
						<%= image_tag("common/icon_facebook.png") %>
					</li>
					<li>
						<%= image_tag("common/icon_twitter.png") %>
					</li>
					<li>
						<%= image_tag("common/icon_me2day.png") %>
					</li>
					<li>
						<div class="fb-like" data-href="http://www.okbrisbane.com" data-send="false" data-width="450" data-action="recommend" data-show-faces="true" data-font="trebuchet ms"></div>
					</li>
				</ul>
			</div>
		</div>
		<div id="wrapper" class="wat-cf">
			<!--
			<div class="flash">
			<% if notice %>
			<p class="message notice">
			<%= notice %>
			</p>
			<% end %>
			<% if alert %>
			<p class="message alert">
			<%= alert %>
			</p>
			<% end %>
			</div>
			-->
			<div id="main">
				<%= yield %>
			</div>
			<div id="sidebar">
				<%= yield :sidebar %>
			</div>
		</div>
		<div class="clear"></div>
		<div id="footer" align="center">
			<p>
				<%= image_tag("#{I18n.locale}/footer/footer.gif") %>
			</p>
		</div>
