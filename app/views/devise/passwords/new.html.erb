<%= render :partial => "devise/shared/header" %>
<div id="_title">
	<div class="page-header">
		<h1> <%= t(:forgot_your_password)%> </h1>
		<p>
			<%= t("#{Style.page(@okpage)}_okpage_top_description".to_sym) %>
		</p>
	</div>
</div>
<div class="alert alert-info">
	<%= t(:change_password_instructions_for)%>
</div>
<div id="signin">
	<%= devise_error_messages! %>
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-search"}) do |f| %>
	<%= f.label :email, t(:signin_email)%>
		<div class="input-prepend">
		<span class="add-on">@</span><%= f.email_field :email, :class => "input-large search-query" %>
	</div>
		<%= f.submit t(:send_reset_password_instrcutions) , :class => "btn btn-primary", :style => "margin-top:20px;float:left;margin-right:10px;" %>
	<% end %>
</div>
<%= render :partial => "devise/shared/footer" %>
<%= active_menu("_findpassword") %>