<%= render :partial => "devise/shared/header" %>
<div id="_title">
	<%= image_tag("#{I18n.locale}/Signup/tit_651.gif", :class => "title_text")%>
	<%= image_tag("#{I18n.locale}/Signup/title.jpg")%>
</div>
<div class="flash">
	<% if notice %>
	<p class="message notice">
		<%= notice %>
	</p>
	<% end %>
	<% if alert %>
	<p class="message alert">
		<%= alert %>
	</p>
	<% end %>
</div>
<div class="alert alert-info">
<%=t(:signin_instructions_for)%>
</div>
<div id="signin">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<%= f.label :email, t(:signin_email), :class => "" %>
		<div class="input-prepend">
		<span class="add-on">@</span><%= f.email_field :email, :class => "input-large" %>
		</div>
		<%= f.label :password, "#{t(:signin_password)}", :class => "" %>
		<%= f.password_field :password, :class => "" %>
		<br>
		<% if devise_mapping.rememberable? -%>
		
		<label class="checkbox">
			<%= f.check_box :remember_me%><%= t(:remember_me) %>
			</label>
		<% end -%>
		<%= f.submit t(:signin), :class => "btn btn-primary" %>
	<% end %>
</div>


<%= single_body_banner(6) %>
<%= render :partial => "devise/shared/footer" %>
<%= active_menu("_signin") %>
