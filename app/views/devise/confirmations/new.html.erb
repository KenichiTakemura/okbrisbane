<%= render :partial => "devise/shared/header" %>
<div id="_title">
	<div class="page-header">
		<h1> <%= t(:findid)%> </h1>
		<p>
			<%= t("#{Style.page(@okpage)}_okpage_top_description".to_sym) %>
		</p>
	</div>
</div>
<div class="alert alert-info">
	<%= t(:sending_confirmation_instructions_for)%>
</div>
	<%= devise_error_messages! %>
<div id="signin">

	<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => ""  }) do |f| %>

		<%= f.label :email, t(:signin_email)%>
		<div class="input-prepend">
		<span class="add-on">@</span><%= f.email_field :email, :class => "input-xlarge" %>
		</div>

		<%= f.submit t(:resend_confirmation_email) , :class => "btn btn-primary", :style => "margin-top:20px;float:left;margin-right:10px;" %>

	<% end %>
</div>
<%= render :partial => "devise/shared/footer" %>
<%= active_menu("_findid") %>