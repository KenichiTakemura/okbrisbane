<%= render :partial => "devise/shared/header" %>

<div id="_title">
	<%= image_tag("#{I18n.locale}/p_signup/tit_611.gif", :class => "title_text")%>
	<%= image_tag("#{I18n.locale}/p_signup/title.jpg")%>
</div>
<div id="_main">
	<span class="stitle"><%= t("stitle_head")%></span></br>
	<%= t("stitle_body")%>
	</br>
	</br>
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>

	<div>
		<%= f.label :email, "#{t(:signin_email)}" %>
		<br />
		<%= f.email_field :email %>
	</div>

	<div>
		<%= f.label :password, "#{t(:signin_password)}" %>
		<br />
		<%= f.password_field :password %>
	</div>

	<div>
		<%= f.label :password_confirmation, t("password_confirmation") %>
		<br />
		<%= f.password_field :password_confirmation %>
	</div>

	<div>
		<%= f.submit "#{t(:signup)}", :class => "ui-button"%>
	</div>
	<% end %>
</div>
<%= render :partial => "devise/shared/footer" %>
<%= _script_document_ready(%Q|$('#_signup').attr("style", "opacity:1;filter:alpha(opacity=100);");|) %>

