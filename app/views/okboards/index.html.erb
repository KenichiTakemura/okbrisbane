<div id="okboards">
	<div class="span3" style="width: 230px">
    	<%= single_body_banner(1) %>
    </div>
    <div class="span7">
		<%= single_body_banner(5) %>
	</div>
	<%= _left_side_menu_widget %>
	<div class="span10">
		<div id="content_body">
			<div class="flash">
				<% if notice %>
				<p class="message notice">
					<%= notice %>
				</p>
				<% end %>
				<% if alert %>
				<p class="message alert">
					<%= alert %>
				</p>
				<% end %>
			</div>
			<%= render :partial => "okboards/#{Style.page(@okpage)}/index" %>
		</div>			
	</div>
	
	<div class="span3" style="float:right"><%= single_body_banner(2) %></div>
	<div class="span3" style="float:right"><%= single_body_banner(3) %></div>
	<div class="span3" style="float:right"><%= single_body_banner(4) %></div>
</div>
</div>
<%= _script_document_ready(%Q|
$("#_#{@okpage}").attr("style", "opacity:1;filter:alpha(opacity=100);");
$('\#sub_menu_#{@okpage}').show("slow");
|) %>
