<% business_clients.each do |c| %>
<div class="media">
	<a class="pull-left" href="#"> <% if c.logo_for(Webcom::Browser::DEVISE_PC) %>
	<%= image_tag(c.logo_for(Webcom::Browser::DEVISE_PC).original_image, :class => "img-rounded")%>
	<% else %>
	<%= image_tag("http://placehold.it/120x100", :class => "img-rounded") %>
	<% end %> </a>
	<div class="media-body">
		<h3><%= c.business_name%></h3>
		<address>
			<%= c.business_address%>
			<br>
			<abbr title="<%= t(:phone)%>"><%= c.business_phone%></abbr>
		</address>
	</div>
</div>
<% end %>
