<div class="page-header">
	<h1> <%= t(Style.page(@okpage))%> </h1>
	<p>
		<%= t(:okpage_top_description) %>
	</p>
</div>
<div class="span10">
	<%= _script(%Q|$(function(){$("#accordion").accordion();});|)%>
	<div id="accordion">
		<% @business_categories.each do |bc| %>
		<% next if !bc.business_client.present?%>
		<h3>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= "#{bc.display_name} (#{bc.business_client.size})" %>
		</h3>
		<div>
		<ul class="thumbnails">
			<% bc.business_client.each_with_index do |c,i| %>
    			<li class="span4">
    				<a href="#clientModal_<%=c.id%>" class="thumbnail" data-toggle="modal">
    					<span class="badge badge-info"><%=i+1%></span>
    					<% if c.main_profile_image.present? %>
    						<%= image_tag(c.main_profile_image.original_image, :class => "image-resize200_150") %>
    					<% elsif c.client_image.present? %>
	    					<%= image_tag(c.client_image.first.original_image, :class => "image-resize200_150") %>
    					<% end %>
    					<h3><%= c.business_name %></h3>
    					<p><%= c.business_profile.head %></p>
    					<p><%= c.business_phone %></p>
    					<address><%= c.business_address %></address>
    				</a>
    				<div class="modal hide fade" id="clientModal_<%=c.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
						<h3 id="myModalLabel"><%= c.business_name %></h3>
						</div>
						<div class="modal-body">
    					<p><%= c.business_profile.head %></p>
    					<p><%= c.business_phone %></p>
    					<address><%= c.business_address %></address>
    					<p><%= raw(c.business_profile.body)%></p>
						</div>
						<div class="modal-footer">
						<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
						</div>
					</div>
    			</li>		
			<% end %>
		    </ul>
		</div>
		<% end %>
	</div>
</div>

