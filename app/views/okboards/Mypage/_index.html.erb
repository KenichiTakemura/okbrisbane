<div style="position: relative; float: left; width: 750px;" id="okboard_for_<%= @okpage %>">
	<div class="okboard_top">
		<p class="okboard_title">
			<%= t(Style.page(@okpage))%>
		</p>
		<div class="okboard_title_image">
			<%= image_tag("#{I18n.locale}/#{Style.page(@okpage)}/logo.gif", :size => "750x100") %>
		</div>
	</div>
	<%= link_to image_tag("#{I18n.locale}/Signup/btn_modify.gif"), edit_user_registration_path %>
	<div id="mypage_mypost_list" style="position: relative; float: left; width: 100%">
		<table id="mypost_table" width=100% class="ui-widget">
			<thead class="ui-widget-header">
				<tr>
					<th><%= t(:page) %></th>
					<th><%= t(:category) %></th>
					<th><%= t(:subject) %></th>
					<th><%= t(:created_at) %></th>
					<th><%= t(:valid_until) %></th>
					<th><%= t(:image) %></th>
					<th><%= t(:attachment) %></th>
					<th><%= t(:comment) %></th>
					<th><%= t(:comment_email) %></th>
					<th><%= t(:view) %></th>
				</tr>
			</thead>
			<tbody class="ui-widget-content">
				<% @user.job.each do |post|%>
					<%= mypage_list(post) %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

