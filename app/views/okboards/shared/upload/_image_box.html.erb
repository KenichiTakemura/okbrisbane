<% if @images.present? %>
<ul class="thumbnails">
<% @images.each do |image| %>

	<li class="span3 pull-left">
		<div class="thumbnail">
		<%= image_tag(image.thumb_image, :title => "#{image.avatar_file_name}") %>
		<%= link_to(t('x'), image_path(image), :class => "image-delete pull-right", :remote => true, :method => :delete, :data => { :confirm => t('confirm_delete') }) %> 
			<p><%= image.something%></p>
			<p><%= image.filename%></p>
			<p><%= image.filesize%>&nbsp;byte</p>
</div>

<% end %>
</ul>
<% end %>

