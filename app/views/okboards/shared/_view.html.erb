<div style="position: relative; float: left; width: 750px;" id="board_for_<%= @okpage %>">
	<div class="okboard_top">
		<p class="okboard_title">
			<%= t(Style.page(@okpage))%>
		</p>
		<div class="okboard_title_image">
			<%= image_tag("#{I18n.locale}/#{Style.page(@okpage)}/view_bg.gif", :size => "750x100") %>
		</div>
	</div>
    <%= image_tag("#{I18n.locale}/common/title_dt_detail_photos.gif") %>
    <%= render :partial => "okboards/shared/gallery" %>
	<%= render :partial => "okboards/shared/sns" %>
    <%= image_tag("#{I18n.locale}/common/title_dt_detail_info.gif") %>
	<div class="okboard_view_content">
		<div class="okboard_view_controll">
			<div id="okboard_likes">
				<%= image_tag("#{I18n.locale}/common/btn_vote.gif") %>
				<%= link_to(image_tag("common/sns/good.gif", :size => "20x20"), Okboard.okboard_link_like(@okpage, @post.id), :remote => true, :method => :post) %>
				<%= @post.likes.to_s %>
				<%= image_tag("common/rank/#{@post.rank}.png") %>
				<%= link_to(image_tag("common/sns/bad.gif", :size => "20x20"), Okboard.okboard_link_dislike(@okpage, @post.id), :remote => true, :method => :post) %>
				<%= @post.dislikes.to_s %>
				<%= link_to(image_tag("common/sns/abuse.png", :size => "20x20"), Okboard.okboard_link_abuse(@okpage, @post.id), :remote => true, :method => :post) %>
				<%= t(:abuse) %>
				<%= @post.abuse.to_s %>
			</div>
			<div id="okboard_quick_links">
				<%= link_to(image_tag("#{I18n.locale}/common/listing.gif"), Okboard.okboard_link(@okpage), :style => "margin:1px") %>
				<% if [:p_job,:p_buy_and_sell,:p_well_being].include?(@okpage) %>
				<%= link_to(image_tag("#{I18n.locale}/common/write.gif"), Okboard.okboard_link_write(@okpage), :style => "margin:1px") %>
				<% end %>
				<% if current_user %>
				<%= link_to(image_tag("#{I18n.locale}/common/mypage_1.gif", :size => "60x20"), mypage_okboards_path, :style => "margin:1px") %>
				<% end %>
				<%= link_to(image_tag("#{I18n.locale}/common/say_1.jpg"), "#new_comment") %>
				<%= link_to(image_tag("#{I18n.locale}/common/home.gif"), root_path, :style => "margin:1px") %>

			</div>
		</div>
		<div class="page_control">
			<div class="to_prev">
			<%= link_to(image_tag("#{I18n.locale}/common/btn_prev.gif", :size => "45x25"), "#", :class => "to_prev_link")%>
			<div class="to_prev_status" style="display:none"><%= image_tag("common/ajax_loading_1.gif")%></div>
			</div>
			<div class="to_next">
			<%= link_to(image_tag("#{I18n.locale}/common/btn_next.gif", :size => "45x25"), "#", :class => "to_next_link")%>
			<div class="to_next_status" style="display:none"><%= image_tag("common/ajax_loading_1.gif")%></div>
			</div>
		</div>
		<table id="okboard_view_table" width=100% class="ui-widget" border="0">
			<tbody>
				<tr class="okboard_view_list_body">
					<td class="item" width="20%"><%= t("author") %></td><td class="body" width="80%"><%= author_name(@post) %></td>
				</tr>
				<tr class="okboard_view_list_body">
					<td class="item" ><%= t("created_at") %></td><td class="body" ><%= Common.date_format(@post.updated_at) %></td>
				</tr>
				<tr class="okboard_view_list_body">
					<td class="item" ><%= t("category") %></td><td class="body" ><%= t("#{@post.category}") %></td>
				</tr>
				<tr class="okboard_view_list_body">
					<td class="item" ><%= t("subject") %></td><td class="body" ><%= @post.subject %></td>
				</tr>
				<tr class="okboard_view_list_body">
					<td class="item" ><%= t("attachment") %></td>
					<td class="body" > <% @post.attachment.each do |attachment| %>
					<div style="position: relative; float: left;margin-left: 5px">
						<%= link_to(image_tag("common/Icon-Document03-Blue.png", :size => "50x50", :title => "#{attachment.avatar_file_name}"), attachment.url) %>
						<%= attachment.filename %>
					</div> <% end %> </td>
				</tr>
				<tr class="okboard_view_list_body">
					<td class="item"><%= t("content") %></td><td class="body" style="overflow-x: auto"><%= raw(@post.content.body) %></td>
				</tr>
			</tbody>
		</table>
		<div class="page_control">
			<div class="to_prev">
			<%= link_to(image_tag("#{I18n.locale}/common/btn_prev.gif", :size => "45x25"), "#", :class => "to_prev_link")%>
			<div class="to_prev_status" style="display:none"><%= image_tag("common/ajax_loading_1.gif")%></div>
			</div>
			<div class="to_next">
			<%= link_to(image_tag("#{I18n.locale}/common/btn_next.gif", :size => "45x25"), "#", :class => "to_next_link")%>
			<div class="to_next_status" style="display:none"><%= image_tag("common/ajax_loading_1.gif")%></div>
			</div>

		</div>

		<br/>
		<div class="comment_logo">
		<%= image_tag("#{I18n.locale}/common/title_dt_user_comments.gif") %>

		<p class="comment_title">
			<%= t(:comment) %> <%= t(:write) %>
		</p>
		</div>
		<div class="new_comment" id="new_comment">
			<% if !current_user %>
			<%= link_to(t(:please_signin_to_comment), comment_new_path(@post, :category => @okpage)) %>
			<% else %>
			<div class="commnet_user">
				<%= image_tag("common/sns/ico_people.gif", :size => "30x30") %>
			</div>
			<div class="new_comment_box">
				<%= form_for(@comment, :method => :post, :html => { :class => "form" }) do |f| %>
				<%= hidden_field_tag :commented_id, @post.id %>
				<%= hidden_field_tag :commented_type, @okpage %>
				<%= f.text_area :body, :class => "text_area", :id => "comment_body", :rows => 15, :cols => 10%>
				<br/>
				<%= f.submit t("add"), :class => "button-link_blue", :id => "comment_submit" %>
				<% end %>
			</div>
			<% end %>

		</div>
		<div class="comment_list"></div>
		<table id="okboard_comment" width=100% class="ui-widget" border="0">
			<tbody>
				<% index = 1 %>
				<% @post.comment.reverse_each do |comment| %>
				<tr class="#{cycle("odd", "even")}">
					<td>
					<div class="comment_row">
						<div class="commnet_user">
							<%= image_tag("common/sns/ico_people_group.gif", :size => "30x30") %>
						</div>
						<div class="comment_attr">
							<%= t(:comment) %>#<%= index.to_s %> <%= comment.postedDate %> <%= comment_author(comment) %>
						</div>

						<div id='<%= "comment_likes_#{comment.id}" %>' class="comment_likes">
							<%= link_to(image_tag("common/sns/likes.gif", :size => "20x20"), comment_like_path(comment), :remote => true, :method => :post) %>
							<%= comment.likes.to_s %>
							<%= link_to(image_tag("common/sns/dislikes.gif", :size => "20x20"), comment_dislike_path(comment), :remote => true, :method => :post) %>
							<%= comment.dislikes.to_s %>
							<%= link_to(image_tag("common/sns/abuse.png", :size => "20x20"), comment_abuse_path(comment), :remote => true, :method => :post) %>
							<%= t(:abuse) %>
							<%= comment.abuse.to_s %>
						</div>

						<div class="comment_content">
							<div id="comment_content_<%= comment.id %>">
								<%= simple_format(comment.body) %>
							</div>
						</div>
						<div class="comment_hidden_content">
							<div id="comment_hidden_<%= comment.id %>" style="display:none">
								<%= t(:comment_is_hidden)%>&nbsp;<%= link_to(t("Show"), "#", :id => "comment_show_#{comment.id}") %>
							</div>
						</div>

						<% if comment.hide? %>
						<%= _script(%Q|
						$("\#comment_content_#{comment.id}").css("display","none");
						$("\#comment_hidden_#{comment.id}").css("display","block");
						$("\#comment_show_#{comment.id}").click(function() {
						$("\#comment_content_#{comment.id}").toggle('slow');
						$("\#comment_hidden_#{comment.id}").toggle('slow');
						return false;
						});
						|) %>

						<% else %>
						<% if current_user %>
						<div class="comment_reply">
							<%= link_to(image_tag("common/sns/reply.gif", :size => "20x20"), "#", :id => "reply_comment_#{comment.id}") %>
							<%= _script(%Q|
							$("\#reply_comment_#{comment.id}").click(function() {
								$("\#comment_body").val(" > #{comment_author(comment)} #{t(:sir)} #{comment.postedDate} #{t(:comment)}\##{index}\\n");
								$("\#comment_body").focus();
								return false;
							});
							|) %>

						</div>
						<% end %>
						<% end %>
					</div></td>
				</tr>
				<% index += 1 %>
				<% end %>
			</tbody>

		</table>
	</div>
</div>
<%= _script(%Q|
$('\#comment_submit').click(function() {
if ($('\#comment_body').val() == "") return false;
})|) %>
<% 	if @search_id.present? %>
<%= _script_document_ready(%Q|
	$('div.to_prev_status').css("display","block");
	$('div.to_next_status').css("display","block");
	$.post("| + next_post_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', d: '|  + Okboard.param_enc(@post.id) + %Q|', s: '| + Okboard.param_enc(@search_id) + %Q|'});
	$.post("| + prev_post_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', d: '|  + Okboard.param_enc(@post.id) + %Q|', s: '| + Okboard.param_enc(@search_id) + %Q|'});
|) %>
<% else %>
<%= _script_document_ready(%Q|
	$('div.to_prev_status').css("display","block");
	$('div.to_next_status').css("display","block");
	$.post("| + next_post_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', d: '|  + Okboard.param_enc(@post.id) + %Q|'});
	$.post("| + prev_post_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', d: '|  + Okboard.param_enc(@post.id) + %Q|'});
|) %>
<% end %>
