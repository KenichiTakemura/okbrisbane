				<%= f.submit t("add"), :class => "button-link_blue", :id => "comment_submit" %>
				<% end %>

			</div>
							<% end %>

		</div>
		<div class="comment_list"></div>
		<table id="okboard_comment" width=100% class="ui-widget" border="0">
			<tbody>
				<% index = 1 %>
				<% @post.comment.reverse_each do |comment| %>
				<tr class="#{cycle("odd", "even")}">
					<td>
					<div class="comment_row">
						<div class="commnet_user">
							<%= image_tag("common/sns/ico_people_group.gif", :size => "30x30") %>
						</div>
						<div class="comment_attr">
							<%= t(:comment) %>#<%= index.to_s %> <%= comment.postedDate %> <%= comment_author(comment) %>
						</div>

						<div id='<%= "comment_likes_#{comment.id}" %>' class="comment_likes">
							<%= link_to(image_tag("common/sns/likes.gif", :size => "20x20"), comment_like_path(comment), :remote => true, :method => :post) %>
							<%= comment.likes.to_s %>
							<%= link_to(image_tag("common/sns/dislikes.gif", :size => "20x20"), comment_dislike_path(comment), :remote => true, :method => :post) %>
							<%= comment.dislikes.to_s %>
							<%= link_to(image_tag("common/sns/abuse.png", :size => "20x20"), comment_abuse_path(comment), :remote => true, :method => :post) %>
							<%= t(:abuse) %>
							<%= comment.abuse.to_s %>
						</div>

						<div class="comment_content">
							<div id="comment_content_<%= comment.id %>">
								<%= simple_format(comment.body) %>
							</div>
						</div>
						<div class="comment_hidden_content">
							<div id="comment_hidden_<%= comment.id %>" style="display:none">
								<%= t(:comment_is_hidden)%>&nbsp;<%= link_to(t("Show"), "#", :id => "comment_show_#{comment.id}") %>
							</div>
						</div>

						<% if comment.hide? %>
						<%= _script(%Q|
						$("\#comment_content_#{comment.id}").css("display","none");
						$("\#comment_hidden_#{comment.id}").css("display","block");
						$("\#comment_show_#{comment.id}").click(function() {
						$("\#comment_content_#{comment.id}").toggle('slow');
						$("\#comment_hidden_#{comment.id}").toggle('slow');
						return false;
						});
						|) %>

						<% else %>
						<% if current_user %>
						<div class="comment_reply">
							<%= link_to(image_tag("common/sns/reply.gif", :size => "20x20"), "#", :id => "reply_comment_#{comment.id}") %>
							<%= _script(%Q|
							$("\#reply_comment_#{comment.id}").click(function() {
								$("\#comment_body").val(" > #{comment_author(comment)} #{t(:sir)} #{comment.postedDate} #{t(:comment)}\##{index}\\n");
								$("\#comment_body").focus();
								return false;
							});
							|) %>

						</div>
						<% end %>
						<% end %>
					</div></td>
				</tr>
				<% index += 1 %>
				<% end %>
			</tbody>

		</table>
