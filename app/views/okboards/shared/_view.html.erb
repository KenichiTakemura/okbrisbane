			<%= link_to(t(:please_signin_to_comment), comment_new_path(@post, :category => @okpage)) %>
			<% else %>
			<div class="commnet_user">
				<%= image_tag("common/sns/ico_people.gif", :size => "30x30") %>
			</div>
			<div class="new_comment_box">
				<%= form_for(@comment, :method => :post, :html => { :class => "form" }) do |f| %>
				<%= hidden_field_tag :commented_id, @post.id %>
				<%= hidden_field_tag :commented_type, @okpage %>
				<%= f.text_area :body, :class => "text_area", :id => "comment_body", :rows => 15, :cols => 10%>
