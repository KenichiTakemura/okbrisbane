<div style="position: relative; float: left; width: 750px;" id="okboard_for_<%= @okpage %>">
	<div class="okboard_top">
		<p class="okboard_title">
			<%= t(Style.page(@okpage))%>
		</p>
		<div class="">
			<%= image_tag("#{I18n.locale}/#{Style.page(@okpage)}/logo.gif", :style => "width:750px;height:100px", :class => "img-circle") %>
		</div>
	</div>
	<div class="okboard_image_list">
		<% if !@board_image_lists.nil? %>
		<div id="okboard_image_list_for_<%= @okpage %>">
			<% @board_image_lists.each do |post| %>
			<div class="okboard_thumbnail">
				<% if post.image.first.linkable? %>
				<%= link_to(image_tag(post.image.first.medium_image, :size => Okvalue::OKBOARD_IMAGE_SIZE),  post.image.first.link)%>
				<% else %>
				<%= image_tag(post.image.first.medium_image, :size => Okvalue::OKBOARD_IMAGE_SIZE) %>
				<% end %>
				<p class="description">
					<%= post.subject%>
				</p>
				<p class="description">
					<%= post.postedDate%>
				</p>				
				<% if post.respond_to? :price%>
				<p class="price_tag">
					<%= post.price %>
				</p>
				<% end %>
				<%= link_to(t("view"), Okboard.okboard_link_with_id(@okpage, post.id), :class => 'button-link_naver image_view') %>
			</div>
			<% end %>
		</div>
		<% end %>
	</div>
	<% if [:p_estate,:p_motor_vehicle,:p_business,:p_accommodation,:p_law,:p_tax,:p_study,:p_immig].include?(@okpage) %>
	<div id="okboard_sponsor_links" style="position: relative; float: left; width: 100%">
		<%= single_body_banner(6) %>
		<%= single_body_banner(7) %>
		<%= single_body_banner(8) %>
	</div>
	<% end %>

	<% if ![:p_mypage, :p_yellowpage].include?(@okpage) %>

	<%= widget("okboards_filter", 400, 200,(render :partial => "okboards/shared/filter"), nil, t(:search)) %>
	<% end %>

	<div class="span7" id="okboard_list_top">
		<span class="label label-info">
		<%= "#{t(:list_total_num)} #{@board_lists.size}" %>
		</span>
		<div class="pull-right">
		<%= link_to(t(:down), "#_more", :class => 'btn btn-mini')%>
		</div>
	</div>
	<div id="okboard_list_for_<%= @okpage %>" style="position: relative; float: left; width: 100%">
		<%= hidden_field_tag :lastid, @lastid, :id => "_lastid" %>
		<div id="okboard_list">
			<%= build_board_list %>
			<div id="okboard_list_body_more_loading">
				<%= image_tag ("common/ajax_loader_1.gif")%>
			</div>
		</div>
	</div>
	<div class="span7" id="okboard_list_bottom">
		<div class="pull-right">
			<%= link_to(t("more"), "#", :remote => true, :method => :post, :id => "_more", :class => "btn btn-mini") %>
			<%= link_to(t(:up), "#okboard_list_top", :class => 'btn btn-mini')%>
		</div>
	</div>
</div>
<% script = %Q|
$('\#_lastid').val("#{@lastid}");
$('\#_more').click(function() {$('\#okboard_list_body_more_loading').css("display", "block");|
if !@post_search.present? || !@post_search.id.present?
	script += %Q|$.post("| + more_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', lastid: $('\#_lastid').val()}); return false;})|
else
	script += %Q|$.post("| + more_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', lastid: $('\#_lastid').val(), s:'| + Okboard.param_enc(@post_search.id) + %Q|'}); return false;})|
end
%>
<%= _script_document_ready(script)%>
<% if !@board_lists.empty? %>
<%= _script_document_ready(%Q|
$('\#okboard_table').dataTable({"bFilter": false,"bInfo": false,"bPaginate": false,"bJQueryUI": true});
|) %>
<% end %>
