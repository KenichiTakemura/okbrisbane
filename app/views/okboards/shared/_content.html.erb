<div class="okboard_top">
	<div class="page-header">
		<h1> <%= t(Style.page(@okpage))%> </h1>
		<p>
			<%= t(:okpage_top_description) %>
		</p>
	</div>
</div>
<div class="span10">
	<div class="okboard_image_list">
		<% if !@board_image_lists.nil? %>
		<div id="okboard_image_list_for_<%= @okpage %>">
			<% @board_image_lists.each do |post| %>
			<div class="okboard_thumbnail">
				<% if post.image.first.linkable? %>
				<%= link_to(image_tag(post.image.first.medium_image, :width => Okvalue::OKBOARD_IMAGE_SIZE_W, :height => Okvalue::OKBOARD_IMAGE_SIZE_H),  post.image.first.link)%>
				<% else %>
				<%= image_tag(post.image.first.medium_image, :width => Okvalue::OKBOARD_IMAGE_SIZE_W, :height => Okvalue::OKBOARD_IMAGE_SIZE_H) %>
				<% end %>
				<p class="description">
					<%= link_to_with_icon(post.subject, Okboard.okboard_link_with_id(@okpage, post.id), "", "", "icon-play")%>
				</p>
				<p class="description">
					<%= post.postedDate%>
				</p>
				<% if post.respond_to? :price%>
				<p class="price_tag">
					<%= post.price %>
				</p>
				<% end %>
			</div>
			<% end %>
		</div>
		<% end %>
	</div>
	<% if [:p_estate,:p_motor_vehicle,:p_business,:p_accommodation,:p_law,:p_tax,:p_study,:p_immig].include?(@okpage) %>
	<div id="okboard_sponsor_links" style="position: relative; float: left; width: 100%">
		<div class="span3" style="float:left">
			<%= single_body_banner(6) %>
		</div>
		<div class="span3" style="float:left">
			<%= single_body_banner(7) %>
		</div>
		<div class="span3" style="float:left">
			<%= single_body_banner(8) %>
		</div>
	</div>
	<% end %>

	<% if ![:p_mypage, :p_yellowpage].include?(@okpage) %>
	<div class="" id="okboards_filter_span">
		<%= widget("okboards_filter", 200, 310,(render :partial => "okboards/shared/filter"), nil, t(:search)) %>
	</div>
	<% end %>

	<div id="okboard_list_for_<%= @okpage %>" style="position: relative; float: left; width: 100%">
		<div id="okboard_list_top" >
			<% if Okbrisbane::Application.config.ok_debug %>
			<div id="list_total_num" class="pull-left">
				<span class="label label-info"> <%= "#{t(:list_total_num)} #{@board_lists.size}" %> </span>
			</div>
			<% end %>
			<div class="pull-right" style="margin-bottom:5px">
				<%= link_to_with_icon(t(:down), "#_more", "btn btn-mini", "", "icon-arrow-down") %>
			</div>
		</div>
		<%= hidden_field_tag :lastid, @lastid, :id => "_lastid" %>
		<div id="okboard_list">
			<%= build_board_list %>
			<div id="okboard_list_body_more_loading">
				<%= image_tag ("common/ajax_loader_1.gif")%>
			</div>
		</div>
	</div>
	<div id="okboard_list_bottom" >
		<% if Okbrisbane::Application.config.ok_debug %>
		<div id="list_total_num" class="pull-left">
			<span class="label label-info"> <%= "#{t(:list_total_num)} #{@board_lists.size}" %> </span>
		</div>
		<% end %>
		<div class="pull-right" style="margin-top:5px;">
			<%= link_to(t("more"), "#", :remote => true, :method => :post, :id => "_more", :class => "btn btn-mini btn-inverse") %>
			<%= link_to_with_icon(t(:up), "#okboard_list_top", "btn btn-mini", "", "icon-arrow-up") %>
		</div>
	</div>
</div>
	<% script = %Q|
	$('\#_lastid').val("#{@lastid}");
	$('\#_more').click(function() {$('\#okboard_list_body_more_loading').css("display", "block");|
    if !@post_search.present? || !@post_search.id.present?
      script += %Q|$.post("| + more_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', lastid: $('\#_lastid').val()}); return false;})|
    else
      script += %Q|$.post("| + more_okboards_path + %Q|", {v: '| + Okboard.okpage_v(@okpage) + %Q|', lastid: $('\#_lastid').val(), s:'| + Okboard.param_enc(@post_search.id) + %Q|'}); return false;})|
    end
	%>
	<%= _script_document_ready(script)%>
	<% if !@board_lists.empty? %>
	<%= _script_document_ready(%Q|
	$('\#okboard_table').dataTable({"bFilter": false,"bInfo": false,"bPaginate": false,"bJQueryUI": true});
	|) %>
	<% end %>
