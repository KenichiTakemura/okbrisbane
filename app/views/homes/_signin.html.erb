<% if !current_user %>
<%= form_for("user", :url => user_session_path, :html => { :class => "header-signin-form"}) do |f| %>
<div class="input-prepend">
	<span class="add-on"><i class="icon-envelope"></i></span><%= f.email_field :email, :class => "input-medidum" %>
</div>
<div class="input-prepend">
	<span class="add-on"><i class="icon-key"></i></span><%= f.password_field :password, :class => "input-medidum" %>
</div>
<label class="checkbox"> <%= f.check_box :remember_me %><%= t(:remember_me_short) %> </label>
<%= link_to_with_icon_with_id(t(:signin), "#", "btn", "", "header-signin", "icon-signin") %>
<span class="header-signin-progress"></span>
<%= link_to(t("findid_short"),new_user_confirmation_path,:class=>"")%>
<%= link_to(t("findpassword"),new_user_password_path,:class=>"")%>
<%= _script(%Q|
	$("\#header-signin").click(function(){
		$(".header-signin-progress").html("#{escape_javascript('<i class="icon-spinner icon-spin icon-large"></i>')}");
		$(".header-signin-form").submit();
		return false;
	})
|) %>
<% end %>
<% else %>
<%= link_to_with_icon(t(:mypage), mypage_okboards_path, "btn", "", "icon-user") %>
<%= link_to_with_icon(t(:signout), destroy_user_session_path, "btn", "", "icon-signout", "delete") %>
<%= fb_shout%>
<% end %>
