<div class="row-fluid">
<strong><p class="well well-small"><%=t(:weather_information)%></p></strong>
<table class="table white_box">
<tr>
	<td><%=t(:au_weather_information)%></td>
	<td><span class="label label-success">
	<% if @weather_au.present? %>
		<strong><%= t(@weather_au.location) %></strong>
		<%= image_tag("common/weather/#{WeatherConfig.au_letter_to_icon(@weather_au.forecast)}.png") %>
	<% end %>
	</span>
	</td>
	<td><%= link_to(t(:more) , "#", :id => "weather_au", :class => "btn btn-mini") %></td>
</tr>
<tr>
	<td><%=t(:ko_weather_information)%></td>
	<td><span class="label label-info">
	<% if @weather_kr.present? %>
		<strong><%= t(@weather_kr.location) %></strong>
		<%= image_tag("common/weather/#{WeatherConfig.kr_letter_to_icon(@weather_kr.forecast)}.png") %>
	<% end %>
	</span>
	</td>
	<td><%= link_to(t(:more) , "#", :id => "weather_kr", :class => "btn btn-mini") %></td>
</tr>
</table>
<div class="row-fluid">
<div class="span12" id="weather_au_information_box" style="display:none">
<div class="_weather_au_information_status" style="display:none"><%= image_tag("common/ajax_loading.gif")%></div>
</div>
<div class="span12" id="weather_kr_information_box" style="display:none">
<div class="_weather_kr_information_status" style="display:none"><%= image_tag("common/ajax_loading.gif")%></div>
</div>
</div>

<div class="row-fluid">
<strong><p class="well well-small"><%=t(:rate_information)%>&nbsp;<small><%=t(:data_from)%>&nbsp;<%=link_to(t(:keb),"http://www.keb.co.kr/")%></small><%= link_to(t(:more) , "#", :id => "ex_rate", :class => "btn btn-mini pull-right") %></p></strong>
<table class="table white_box">
	<thead class="">
		<tr>
			<th class="small"></th>
			<th class="small"><%= t(:rate_sell)%></th>
			<th class="small"><%= t(:rate_buy)%></th>
			<th class="small"><%= t(:rate_avg)%></th>
			</tr>
	</thead>
	<tbody class="">
		<% if !@rates.present? %>
		<tr><td colspan="3"><%= t(:no_information) %>
		</td></tr>
		<% else %>
		<tr>
			<td><%= image_tag("common/aud.gif")%> 1AUD</td>
			<td><%= number_to_currency(@rates[5].rate_a, :locale => :ko)%></td>
			<td><%= number_to_currency(@rates[4].rate_a, :locale => :ko)%></td>
			<td><%= number_to_currency(@rates[4].rate_c, :locale => :ko)%></td>
		</tr>
		<tr>
			<td><%= image_tag("common/usd.gif")%> 1USD</td>
			<td><%= number_to_currency(@rates[1].rate_a, :locale => :ko)%></td>
			<td><%= number_to_currency(@rates[0].rate_a, :locale => :ko)%></td>
			<td><%= number_to_currency(@rates[0].rate_c, :locale => :ko)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
<div class="span12" id="rate_information_box" style="display:none">
<div class="_rate_information_status" style="display:none"><%= image_tag("common/ajax_loading.gif")%></div>
</div>
</div>
</div>
<%= _script(%Q|
$("\#weather_au").click(function() {
	if ($("#weather_au_information_box").is(":hidden")) {
		$("#weather_au_information_box").show("slow");
		$("#weather_kr_information_box").hide("slow");
		$("#rate_information_box").hide("slow");
		$('div._weather_au_information_status').css("display","block");
	    $.post("/homes/current_weather?locale=#{I18n.locale}&c=" + "#{Okvalue::AU}");
	}
	else {
		$("#weather_au_information_box").hide("slow");
	}
	return false;
});
$("\#weather_kr").click(function() {
	if ($("#weather_kr_information_box").is(":hidden")) {
		$("#weather_kr_information_box").show("slow");
		$("#weather_au_information_box").hide("slow");
		$("#rate_information_box").hide("slow");
		$('div._weather_kr_information_status').css("display","block");
	    $.post("/homes/current_weather?locale=#{I18n.locale}&c=" + "#{Okvalue::KR}");
	}
	else {
		$("#weather_kr_information_box").hide("slow");
	}
	return false;
});
$("\#ex_rate").click(function() {
	if ($("#rate_information_box").is(":hidden")) {
		$("#rate_information_box").show("slow");
		$("#weather_au_information_box").hide("slow");
		$("#weather_kr_information_box").hide("slow");
		$('div._rate_information_status').css("display","block");
	    $.post("/homes/current_rate?locale=#{I18n.locale}");
	}
	else {
		$("#rate_information_box").hide("slow");
	}
	return false;
});
|)%> 
</div>
