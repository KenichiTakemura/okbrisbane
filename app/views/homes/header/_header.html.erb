<div class="container-fluid">
	<div class="row-fluid">
		<div class="row-fluid">
			<%= t("welcome_message")%>
			<% if current_user %>
			<%= current_user.name %>&nbsp;<%= t(:sir)%>
			<% end %>
		</div>
		<div class="row-fluid">
			<div class="span4">
				<%= link_to image_tag("common/logo.gif", :size => "250x120", :class => "img-rounded img-polaroid"), root_path(:locale => 'ko' ) %>
			</div>
			<div class="span8">
				<div class="row-fluid">
					<%= render :partial => "homes/signin" %>
				</div>
				<div class="row-fluid">
					<% if @admin_notice.present? %>
					<%= render :partial => "homes/header/admin_notice" %>
					<% else %>
					<!--%= single_header_banner(1) %-->
					<% end %>
				</div>
				<div class="row-fluid">
					<%= link_to(image_tag("#{I18n.locale}/Signup/mbtn_join.gif"), member_managements_sign_up_path) %>
					<%= facebook %>
					<%= google %>
					<%= link_to_with_icon_with_id(t("bookmarkme"),"#","btn btn-link pull-right","","bookmarkme","icon-star icon-white")%>

					<form class="form-search mt-5">
						<input type="text" class="input-large search-query" placeholder="Search from contents">
						<%= link_to(image_tag("#{I18n.locale}/common/org_search.gif"),"#",:remote => true, :class => "img-rounded")%>
					</form>
				</div>
			</div>
			</div>
			<!-- <%= single_header_banner(1) %> -->
			<div class="row-fluid header-bottom">
				<%= navigation %>
			</div>
		</div>
		<%= _script_document_ready(%Q|
		$('\#bookmarkme').click(function(){
		var url = "#{root_url}";
		var title = "QUEENSLAND PORTAL OKBRISBANE";
		if(document.all) { // ie
		window.external.AddFavorite(url, title);
		}
		else if(window.sidebar) { // firefox
		console.log("firefox.");
		window.sidebar.addPanel(title,url,"");
		}
		else if(window.opera && window.print) { // opera
		var elem = document.createElement('a');
		elem.setAttribute('href',url);
		elem.setAttribute('title',title);
		elem.setAttribute('rel','sidebar');
		elem.click(); // this.title=document.title;
		}
		console.log("bookmarked.");
		});
		|)%>
</div>
