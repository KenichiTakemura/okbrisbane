<div class="container-fluid">

	<div class="row-fluid">
		<div class="span4" id="logo">
			<%= link_to image_tag("common/logo.gif", :size => "250x120", :class => "img-rounded img-polaroid"), root_path(:locale => 'ko' ) %>
		</div>
		<% if @admin_notice.present? %>
		<%= render :partial => "homes/header/admin_notice" %>
		<% else %>
		<!--<%= single_header_banner(2) %>-->
		<% end %>
		<div class="span8 pull-right" id="follows">
			<div class="row-fluid">
				<% if socialable? %>
				<div class="span8">
					<div class="fb-like" data-href="http://www.okbrisbane.com" data-send="false" data-width="450" data-action="recommend" data-show-faces="true" data-font="trebuchet ms"></div>
				</div>
				<div class="span4">
					<a href="https://twitter.com/twitter" class="twitter-follow-button" data-show-count="false" data-lang="ko">@twitter 팔로우하기</a>
					<script>
						! function(d, s, id) {
							var js, fjs = d.getElementsByTagName(s)[0];
							if (!d.getElementById(id)) {
								js = d.createElement(s);
								js.id = id;
								js.src = "//platform.twitter.com/widgets.js";
								fjs.parentNode.insertBefore(js, fjs);
							}
						}(document, "script", "twitter-wjs");
					</script>
				</div>
				<div class="fb-facepile" data-href="http://www.okbrisbane.com" data-max-rows="2" data-width="600"></div>
				<% end %>
				</div>
		</div>
	</div>
	<!-- <%= single_header_banner(1) %> -->
	<div class="row-fluid header-bottom">
		<%= navigation("#41A317","#f0f0f0") %>
	</div>
</div>
<%= _script_document_ready(%Q|
$('\#bookmarkme').click(function(){
	var url = "#{root_url}";
	var title = "QUEENSLAND PORTAL OKBRISBANE";
    if(document.all) { // ie
        window.external.AddFavorite(url, title);
    }
    else if(window.sidebar) { // firefox
    	console.log("firefox.");
        window.sidebar.addPanel(title,url,"");
    }
    else if(window.opera && window.print) { // opera
        var elem = document.createElement('a');
        elem.setAttribute('href',url);
        elem.setAttribute('title',title);
        elem.setAttribute('rel','sidebar');
        elem.click(); // this.title=document.title;
    }
    console.log("bookmarked.");
});
|)%>