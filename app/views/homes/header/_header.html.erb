<ul class="thumbnails" style="margin-top:10px">
<li class="span7">
<div class="">
<% logo = BusinessClient.okbrisbane?.logo_for(Webcom::Browser::DEVISE_PC) %>
<% if logo.present? %>
<%= link_to image_tag(logo.original_image, :class => "img-rounded img-polaroid"), root_path(:locale => 'ko' ) %>
<% else %>
<%= link_to image_tag("http://placehold.it/330x180", :class => "img-rounded img-polaroid"), root_path(:locale => 'ko' ) %>
<% end %>
</div>
</li>
<li class="span5">
	<div class="row-fluid">
<% if !current_user %>
<%= form_for("user", :url => user_session_path, :html => { :class => "header-signin-form"}) do |f| %>
<div class="control-group">
	<div class="controls">
	<div class="input-prepend">
		<span class="add-on"><i class="icon-envelope"></i></span><%= f.email_field :email, :class => "input-large" %>
	</div>
	</div>
</div>
<div class="control-group">
	<div class="controls">
<div class="input-prepend">
	<span class="add-on"><i class="icon-key"></i></span><%= f.password_field :password, :class => "input-large" %>
</div>
</div>
</div>
<label class="checkbox"> <%= f.check_box :remember_me %><%= t(:remember_me_short) %> </label>
<%= link_to_with_icon(t(:signin), "#", "btn btn-primary", "", "icon-signin", "header-signin") %>
<span class="header-signin-progress"></span>
<%= link_to(t("findid_short"),new_user_confirmation_path,:class=>"")%>
<%= link_to(t("findpassword"),new_user_password_path,:class=>"")%>
<%= _document_on("click","\#header-signin",%Q|function(){
	$(".header-signin-form").submit();
	return false;
	}
|)
%>
<% end %>
<% else %>
<%= link_to_with_icon(t(:mypage), mypage_okboards_path, "btn", "", "icon-user") %>
<%= link_to_with_icon_with_method(t(:signout), destroy_user_session_path, "btn", "", "icon-signout", "", "delete") %>
<%= show_user %>
<% end %>
</div>
<div class="row-fluid">
		<% if !current_user %>

<%= pc_facebook %>&nbsp;
<%= pc_google %>&nbsp;
<%= link_to_with_icon(t(:signup), user_sign_up_path, "btn btn-link", "", "icon-ok") %>
<% else %>

<%= fb_shout %>
<% end %>

</li>
</ul>

